<table class='ui table'>
  <tr>
    <th>
      Если позиция модели
    </th>
    <th>ниже</th>
    <th>или</th>
    <th>выше</th>
    <th>то</th>
    <th>
      отправить письмо
    </th>
    <th>
    </th>
  </tr>
<%
var places_array = $.map($(Array(12)),function(val, i) { return i; });

for (var k in this.list)
{
  var v = this.list[k];
  if (v.name == null)
    v.name = "(Модель сканируется с yandex.market)";
%>
  <tr>
    <td>
      <%@ v.name %>
      <a href='//market.yandex.ru/offers.xml?grhow=shop&how=aprice&np=1&modelid=<%@ v.ymid %>'>
        <i class="external url icon link"></i>
      </a>
    </td>
    <td colspan='2'>
      <%= 
        this.DeferRender
        (
          'utils/select',
          {
            list: places_array, 
            name: "name"
          }
        ) %>
    </td>
    <td colspan='2'>
      <%= 
        this.DeferRender
        (
          'utils/select',
          {
            list: places_array, 
            name: "name"
          }
        ) %>
    </td>
    <td>
      <%= 
        this.DeferRender
        (
          'utils/select',
          {
            list: 
            [
              "Каждый час",
              "4 раза в день",
              "Дважды в день",
              "Каждый день",
              "Каждую неделю",
            ], 
            name: "name"
          }
        ) %>
    </td>
    <td>
      <%= this.DeferRender('cp/track/disable', {}) %>
      <%= this.DeferRender('cp/track/remove', {}) %>
    </td>
  </tr>
<%
}
%>
</table>